    <!-- Nút "Lên đầu trang" (Tùy chọn) --><button id="to-top-button" title="Go to top"
        class="hidden fixed bottom-5 right-5 z-50 p-3 bg-custom-gold text-white rounded-full shadow-lg hover:bg-opacity-80 transition-all duration-300">
        <i class="fa fa-arrow-up"></i>
    </button>

    <script>
        // JavaScript cho nút "Lên đầu trang"
        const toTopButton = document.getElementById('to-top-button');
        
        window.onscroll = function () {
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                toTopButton.classList.remove('hidden');
            } else {
                toTopButton.classList.add('hidden');
            }
        };

        toTopButton.onclick = function () {
            document.body.scrollTop = 0; // For Safari
            document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
        };

        // Ngăn form gửi đi thật
        document.getElementById('contact-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Form đã được gửi (demo)!');
            // Xóa nội dung form
            this.reset();
        });
    </script>

</body>
